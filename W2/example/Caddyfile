{
	debug
	auto_https off
	log {
		output stdout
		level DEBUG
	}
	local_certs
}

127.0.0.1, 127.0.0.1:80, localhost, localhost:80 {
	handle /upload/* {
		root ./svelte/dist
		file_server browse
	}

	handle /api/* {
		# Go
		reverse_proxy 127.0.0.1:9090
	}
	handle /graphql {
		# Go
		reverse_proxy 127.0.0.1:9090
	}

	handle {
		# Svelte
		reverse_proxy 127.0.0.1:3000
	}
}

